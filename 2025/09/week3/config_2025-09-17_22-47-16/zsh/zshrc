if [[ -f "$ZSH_CONFIG_DIR/user.zsh" ]]; then
    source "$ZSH_CONFIG_DIR/user.zsh"
fi

# Load local machine-specific customizations
if [[ -f "$ZSH_CONFIG_DIR/local.zsh" ]]; then
    source "$ZSH_CONFIG_DIR/local.zsh"
fi

# =====================================================
# MODULE STATUS & DIAGNOSTICS
# =====================================================

modular_zsh_status() {
    # Show status of all modules
    echo "üì¶ Modular ZSH Configuration Status"
    echo "==================================="
    echo ""

    echo "Configuration Directory: $ZSH_CONFIG_DIR"
    echo "Modules Directory: $ZSH_CONFIG_MODULES"
    echo ""

    echo "Module Status:"
    for module module_status in ${(kv)LOADED_MODULES}; do
        case "$module_status" in
            "success")
                echo "  ‚úÖ $module: Loaded successfully"
                ;;
            "error")
                echo "  ‚ùå $module: Failed to load"
                ;;
            "missing")
                echo "  ‚è≠Ô∏è  $module: Not found (optional)"
                ;;
            *)
                echo "  ‚ùì $module: Unknown status ($module_status)"
                ;;
        esac
    done

    echo ""

    # Show available but not loaded modules
    echo "Available Modules:"
    if [[ -d "$ZSH_CONFIG_MODULES" ]]; then
        for module_file in "$ZSH_CONFIG_MODULES"/*.zsh; do
            if [[ -f "$module_file" ]]; then
                local module_name=$(basename "$module_file" .zsh)
                if [[ -z "${LOADED_MODULES[$module_name]}" ]]; then
                    echo "  üìÑ $module_name: Available but not loaded"
                fi
            fi
        done
    fi
}

reload_modular_zsh() {
    # Reload the modular zsh configuration
    echo "üîÑ Reloading modular ZSH configuration..."

    # Clear loaded modules tracking
    LOADED_MODULES=()

    # CRITICAL: Set reload flag and clear loading flag
    export ZSH_RELOADING="true"
    unset MODULAR_ZSHRC_LOADED

    # Source this file again
    source ~/.zshrc

    # Clear reload flag
    unset ZSH_RELOADING

    echo "‚úÖ Configuration reloaded"
    echo "üí° Run 'modular_zsh_status' to see module status"
}

# Add zshreload alias for convenience
zshreload() {
    reload_modular_zsh
}


# =====================================================
# LIGHT MODE / HEAVY MODE TOGGLE FUNCTIONS
# =====================================================

toggle_zsh_mode() {
    # Toggle between light and heavy mode
    if [[ "$ZSH_LIGHT_MODE" == "true" ]]; then
        echo "üîÑ Switching to heavy mode..."
        export ZSH_LIGHT_MODE=false
        export ZSH_MODE="heavy"
        zsh-reload
    else
        echo "üîÑ Switching to light mode..."
        export ZSH_LIGHT_MODE=true
        export ZSH_MODE="light"
        zsh-reload
    fi
}

force_light_mode() {
    # Force light mode
    echo "üöÄ Forcing light mode..."
    export ZSH_LIGHT_MODE=true
    export ZSH_MODE="light"
    zsh-reload
}

force_heavy_mode() {
    # Force heavy mode
    echo "üöÄ Forcing heavy mode..."
    export ZSH_LIGHT_MODE=false
    export ZSH_MODE="heavy"
    zsh-reload
}

# Purpose: Display comprehensive ZSH mode status and available commands
# Arguments: None
# Returns: 0 always
# Usage: zsh_mode_status
zsh_mode_status() {
    echo "üìä ZSH Mode Status"
    echo "=================="
    echo "Current Mode: ${ZSH_MODE:-staggered} (default: staggered)"
    echo "Light Mode: $([[ "$ZSH_LIGHT_MODE" == "true" ]] && echo "Enabled" || echo "Disabled")"
    echo "IDE Detected: $([[ -n "$JETBRAINS_IDE" || -n "$VSCODE_PID" || "$TERM_PROGRAM" == "Cursor" ]] && echo "Yes (auto-staggered)" || echo "No")"
    echo "Fast Startup: $([[ "$FAST_STARTUP" == "true" ]] && echo "Enabled" || echo "Disabled")"
    echo ""
    echo "üéØ Mode Descriptions:"
    echo "  ‚Ä¢ light: Minimal config for CI/scripts"
    echo "  ‚Ä¢ staggered: Progressive loading (DEFAULT for IDEs)"
    echo "  ‚Ä¢ heavy: All modules immediately"
    echo ""
    echo "Available Commands:"
    echo "  toggle_zsh_mode - Switch between light/heavy mode"
    echo "  force_light_mode - Force light mode"
    echo "  force_heavy_mode - Force heavy mode"
    echo "  zsh_mode_status - Show this status"
}

# =====================================================
# SYSTEM DEMYSTIFICATION FUNCTION
# =====================================================

zsh_system_explain() {
    echo "üîç ZSH System Architecture Explanation"
    echo "======================================"
    echo ""
    echo "üèóÔ∏è  **TWO SEPARATE SYSTEMS:**"
    echo ""
    echo "1Ô∏è‚É£  **Atomantic's Oh-My-Zsh System:**"
    echo "   üìÅ Location: ~/.dotfiles/oh-my-zsh"
    echo "   üéØ Purpose: Provides Oh-My-Zsh framework and themes"
    echo "   üîß Used by: Both systems for shell functionality"
    echo ""
    echo "2Ô∏è‚É£  **Siege Analytics ZSH System:**"
    echo "   üìÅ Location: ~/.config/zsh/"
    echo "   üéØ Purpose: Custom business logic, Python, Docker, databases"
    echo "   üîß Active file: ~/.config/zsh/zshrc (this system)"
    echo ""
    echo "üîÑ **CURRENT SETUP:**"
    echo "   ~/.zshrc ‚Üí sources ~/.config/zsh/zshrc"
    echo "   ~/.config/zsh/zshrc ‚Üí uses $ZSH_OMZSH_DIR for Oh-My-Zsh"
    echo ""
    echo "üìä **PATH VERIFICATION:**"
    echo "   Oh-My-Zsh path: ${ZSH_OMZSH_DIR:-NOT_SET}"
    echo "   Actual ZSH: $ZSH"
    echo "   Match: $([[ \"$ZSH\" == \"$ZSH_OMZSH_DIR\" ]] && echo \"‚úÖ Correct\" || echo \"‚ùå Mismatch\")"
    echo ""
    echo "üöÄ **COMMANDS:**"
    echo "   zsh_system_explain  - Show this explanation"
    echo "   zsh-status          - Show module status"
    echo "   modular_zsh_status  - Detailed module info"
}

